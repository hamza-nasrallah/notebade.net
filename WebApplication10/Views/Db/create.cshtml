@model Do
<a asp-action="Index" class="btn btn-success">view the task</a>
<form asp-action="create" method="post">
   
    <div class="form-row">
        
        <div class="form-group col-md-6">

            <label asp-for="@Model.Name">name</label>
            <input  class="form-control" asp-for="@Model.Name">
        </div>
    </div>
    <div class="form-group">

        <label asp-for="@Model.date">date</label>
        <input type="date" class="form-control" asp-for="@Model.date">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Desc">descr</label>
        <input  class="form-control" asp-for="@Model.Desc">
    </div>
    <div class="form-row">
        
        
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input"asp-for="@Model.IsDone" type="checkbox">
            <label class="form-check-label"asp-for="@Model.IsDone" >
               isdone
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">save</button>
</form>
